{
  "name": "root",
  "scripts": {
    "clean": "rm -rf **/node_modules/",
    "dev:client": "cd client && npm start",
    "dev:server": "cd server && npm start",
    "dev": "concurrently --kill-others \"npm run dev:client\" \"npm run dev:server\""
  },
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}
